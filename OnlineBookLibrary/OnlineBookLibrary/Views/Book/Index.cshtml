@model List<Book>
<h3>Zlatko's Online Book Library</h3>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Book Isbn</th>
                <th>Book Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Isbn</td>
                    <td>@book.Quantity</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = book.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = book.Id }) |
                        @Html.ActionLink("Edit", "Edit", new { id = book.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Create" asp-controller="Book" class="btn btn-primary">Create new book</a>
    </div>


</div>
